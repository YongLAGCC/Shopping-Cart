<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>


{{# each products}}

    <div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src={{this.imagePath }}
        alt="" class = "img-responsive">
        <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description"> 
            {{this.description}}   
        <p>
            <div class="clearfix">
                <a href="#" class="price  pull-left">${{this.price}}</a> 
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add In Shopping Car</a>
            </div>  
        </p>
        </div>
    </div>
    </div>

    {{/each}}
    </div>
{{/each}}



